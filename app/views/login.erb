<header>
  <a href="/" class="header-not-home"><h1>Finstagram</h1></a>
  <div class="login-info">
    <% if current_user %>
      <%= current_user.username %>
      <a href="/logout" class="top-bar-content">Logout</a>
    <% else %>
      <a href="/login" class="top-bar-content">Login</a>
      <a href="/signup" class="top-bar-content">Signup</a>
    <% end %>
  </div>
</header>

<%= @error_message if @error_message %>
<p></p>

<form action="/login" Method="POST" class="full-form">
  <p></p>
  <div class="form-group">
    <label for="username">Username</label>
    <input type="text" id="username" name="username">
  </div>
  <div class="form-group">
    <label for="password">Password</label>
    <input type="password" id="password" name="password">
  </div>
  <div class="form-group">
    <button class="button" type="submit">Login</button>
  </div>
</form>