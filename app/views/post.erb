<header>
  <a href="/" class="header-not-home">
    <h1>Finstagram</h1>
  </a>
  <div class="login-info">
    <% if current_user %>
    <%= current_user.username %>
    <a href="/logout" class="top-bar-content">Logout</a>
    <% else %>
    <a href="/login" class="top-bar-content">Login</a>
    <a href="/signup" class="top-bar-content">Signup</a>
    <% end %>
  </div>
</header>

<p></p>
<form action="/post" Method="POST" class="full-form">
  <p></p>
  <div class="form-group">
    <label for="photo_url">Photo URL</label>
    <input type="text" id="photo_url" name="photo_url">
  </div>
  <div class="form-group">
    <button class="button" type="submit">Upload</button>
  </div>
</form>